<%- include('./partials/header') %>
	<div class="container login_container_BS5 container-sm mb-5 mt-5">
		<form action="/login" method="POST">
			<% if(created){ %>
				<span id="created">Dados inseridos com sucesso!</span>
			<% } %>
			<% if(error.password){ %>
				<span id="error"><%=error.password.msg%></span>	
			<%}%>
			<% if(error.email){ %>
				<span id="error"><%=error.email.msg%></span>	
			<%}%>
			<% if(errorModel != undefined){ %>
				<span id="error"><%=errorModel%></span>	
			<%}%>
			<div class="mb-3">
				<label for="usuario" class="form-label">Login</label>
				<% if(errorModel){ %>
					<input type="text" id="usuario" class="form-control" name="email" placeholder="username" value="<%=old.email%>">	
				<%} else{%>
				<input type="text" id="usuario" class="form-control" name="email" placeholder="email de cadastro">
				<%}%>
			</div>
				
			<div class="mb-3">
				<label class="form-label" for="password">Senha</label>
				<input type="password" class ="form-control" id="password" name="password" placeholder="password">
			</div>
				<div class="d-grid gap-2 col-8">
					<button type="submit" class="btn btn-success mt-3 mb-2">Login</button>

					<p class="text-muted">Novo por aqui? <a href="/clientes/cadastrar">Cadastre-se</a></p>
				</div>
		
		</form>
    </div>
<%- include("./partials/footer")%>