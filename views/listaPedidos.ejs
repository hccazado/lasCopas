<%-include('./partials/headerAdm')%>
<div class="container mt-3">
    <div class="container_lista">
        <h4 class="subtitulo">Administração Pedidos</h4>
        <div class="row mt-5">
            <div class="col">
                <a class="btn btn-primary text-mutted" role="button" id="btBck">Voltar</a>
            </div>
            <div class="col">               
                <div class="form-floating busca_cliente">
                    <input type="text" class="form-control" id="buscaProduto" placeholder="Nro. Produto ou doc. Cliente ">
                    <label for="buscaProduto">Buscar Pedido</label>
                </div>
            </div>
        </div> 
        <div  class="table-responsive mt-3">
            <table class="table border-mutted table-bordered table-hover caption-bottom">
                <caption>Pedidos Confirmados</caption>
                <thead>
                    <tr>
                        <td class="align-middle">Nro.</td>
                        <td class="align-middle">Cliente</td>
                        <td class="align-middle">Endereço</td>
                        <td class="align-middle">Data</td>
                    </tr>
                </thead>
                <tbody>
                    <%for(let i=0; i<pedidos.length;i++){%>
                    <tr>
                        <td class="align-middle"><a class="link_tabela" href="/api/pedidos/<%=pedidos[i].nro%>"><%=pedidos[i].nro%></a></td>
                        <td class="align-middle"><a class="link_tabela" href="/api/pedidos/<%=pedidos[i].nro%>"><%=pedidos[i].cliente%></a></td>
                        <td class="align-middle"><a class="link_tabela" href="/api/pedidos/<%=pedidos[i].nro%>"><%=pedidos[i].endereco%></a></td>
                        <td class="align-middle"><a class="link_tabela" href="/api/pedidos/<%=pedidos[i].nro%>"><%=pedidos[i].data%></a></td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
    <script src="/javascripts/buscaPedido.js"></script>
<%-include('./partials/footerAdm')%>